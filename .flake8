[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    assets
ignore =
    E203,  # Whitespace before ':' (conflicts with black)
    E501,  # Line too long (handled by black)
    W503,  # Line break before binary operator (conflicts with black)
    E402,  # Module level import not at top (some imports are conditional)
per-file-ignores =
    __init__.py:F401
